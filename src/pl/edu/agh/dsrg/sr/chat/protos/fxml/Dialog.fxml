<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="140.0"
          prefWidth="280.0" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="pl.edu.agh.dsrg.sr.chat.protos.controllers.DialogController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <TextField fx:id="loginTextField" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                   GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets bottom="10.0" left="5.0" right="5.0"/>
            </GridPane.margin>
        </TextField>
        <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveBtnFun" prefWidth="80.0" text="Save"
                GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets bottom="10.0"/>
            </GridPane.margin>
        </Button>
        <Label text="Welcome to C.H.A.T. !" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font>
                <Font size="25.0"/>
            </font>
        </Label>
        <Label text="Please enter your login" GridPane.halignment="CENTER" GridPane.rowIndex="1"
               GridPane.valignment="CENTER"/>
    </children>
</GridPane>
